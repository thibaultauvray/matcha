<div class="bg_header">
    <div class="container">
        <div class="header">
            <div class="col-sm-2">
                <h1 class="title"><a href="{{ path_for('homepage') }}">Matcha</a></h1>
            </div>
            <div class="col-sm-2">
                <ul class="icon-menu">
                    <li><a href="{{ path_for('viewSuggest', {'id' :  session.login.id }) }}"><span class="glyphicon glyphicon-map-marker"></span></a></li>
                </ul>
            </div>
            <div class="col-sm-5">
                <form action="{{ path_for('search') }}" method="POST" class="form-search">
                    <input type="text" id="terms" name="terms">
                    <button type="submit" class="glyphicon glyphicon-search submit-search"></button>
                </form>
            </div>
            <div class="connex col-sm-3">
                <div class="isConnected">
                    {% if app.isLogged %}
                    <div class="dropdown">
                        Bienvenue <span class="pink dropdown-toggle" type="button" id="dropdownMenu1"
                                        data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="true">
							{{ session.login.nickname }}
                            <span class="caret"></span>
						</span>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path_for('viewProfil', { 'id' : session.login.id }) }}">Mon profil</a></li>
                            <li><a href="{{ path_for('editProfil', { 'id' : session.login.id }) }}">Editer mon
                                    profil</a></li>
                            <li><a href="{{ path_for('signout') }}">Se deconnecter</a></li>
                        </ul>
                    </div>

                </div>
                {% else %}
                    <div class="form-con">
                        <form class="form-inline" method="POST" action="{{ path_for('signin') }}">
                            <div class="form-group">
                                <label class="sr-only" for="exampleInputEmail3">Email address</label>
                                <input type="mail" name="mail" class="form-control" id="exampleInputEmail3"
                                       placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="exampleInputPassword3">Password</label>
                                <input type="password" name="passwd" class="form-control" id="exampleInputPassword3"
                                       placeholder="Password">
                            </div>
                            {% if flash.getMessage('error').0 %}
                                <div class="alert alert-success">
                                    {{ flash.getMessage('error').0 }}
                                </div>
                            {% endif %}
                            <button type="submit" class="btn btn-default">OK</button>
                        </form>
                        <p class="forget">mot de passe oubli√© ?</p>
                        <p class="forget"><a href="{{ path_for('register') }}">Inscription ?</a></p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

</div>
<div class="subheader">
    <div class="container">

    </div>
</div>
