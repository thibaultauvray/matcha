{% extends "template/base.twig" %}

{% block body %}
    <h1>{{ OK }}</h1>
    <div class="container">
        <div class="toAdopt">
            <h2><span>Inscription</span></h2>
            <div class="row  form form-register">
                <form class="form-horizontal" method="post" action="{{ path_for('postRegister') }}" >
                    <div class="form-group">
                        <label class="col-sm-2" for="nickname">Pseudo</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="nickname" name="nickname" placeholder="Votre pseudo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2" for="mail">Mail</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="mail" id="mail" name="mail" placeholder="Votre adresse email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2" for="name">Nom</label>
                        <div class="col-sm-10">
                         <input class="form-control" type="text" id="name" name="name" placeholder="Votre nom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2" for="lastname">Prénom</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="lastname" name="lastname" placeholder="Votre prénom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2" for="passwd">Mot de passe</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="passwd" id="passwd" name="passwd" placeholder="Votre mot de passe(+ de 6 caractere)">
                        </div>
                    </div>
                     <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}