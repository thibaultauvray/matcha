{% if error == 0 %}
<li class="mar-btm" id="msgLoad" data-id="{{ idChat }}">
    <div class="{% if idRec != id %}media-right{% else %}media-left{% endif %}"><img
                alt="Profile Picture" class="img-circle img-sm"
                src="/img/{{ url }}">
    </div>
    <div class="media-body pad-hor {% if idRec != id %}speech-right{% endif %}">
        <div class="speech"><a class="media-heading" href="#">{{ nickname }}</a>
            <p>{{ message }}</p>
            <p class="speech-time"><i class="fa fa-clock-o fa-fw"></i>{{ date }}</p>
        </div>
    </div>
</li>
{% else %}
    <div class="alert alert-danger">Vous n'etes plus connecte avec cette personne</div>
{% endif %}